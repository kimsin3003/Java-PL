class Exercise6_2{
	public static void main(String args[]){
		Student s = new Student();
		s.name = "홍길동";
		s.ban = 1;
		s.no = 1;
		s.kor = 100;
		s.eng = 60;
		s.math = 76;
	}
}


class Student {
	String name;
	int ban;
	int no;
	int kor;
	int eng;
	int math;
	
	
	public int getTotal(){
		return kor + eng + math;
	}
	
	public float getAverage(){
		return (float) (Math.round(getTotal() * 100d) / 300d);
	}
	
	public String info(){
		return name+", "+ban+", "+no+", "+kor+", "+eng+", "+math;
	}
}
