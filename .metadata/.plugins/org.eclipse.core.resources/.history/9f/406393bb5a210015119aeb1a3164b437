
public class FruitBuyer {

	int numOfFruit;
	int money;
	
	public FruitBuyer(int money){
		this.money = money;
		this.numOfFruit = 0;
	}

	public int getNumOfFruit() {
		return numOfFruit;
	}

	public void setNumOfFruit(int numOfFruit) {
		this.numOfFruit = numOfFruit;
	}

	public int getMoney() {
		return money;
	}

	public void setMoney(int money) {
		this.money = money;
	}
	
	public void buyFruit(FruitSeller seller, int money){
		int count = seller.sellFruit(money);
		this.money -= money;
		this.numOfFruit += count;
	}
	
	public void printBuyer(){
		System.out.println("과일 수: " + this.numOfFruit);
		System.out.println("남은  " + this.money);
	}
	
}
