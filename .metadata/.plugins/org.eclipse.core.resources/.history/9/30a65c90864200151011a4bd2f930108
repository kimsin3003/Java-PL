package Maze;

public class Map {
	private int mapSize = 8;
	private int map[][] = null;
	
	
	public int getLocInfo(Point pos){
		return map[pos.y][pos.x];
	}
	
	public void setMap(){
		map = new int[mapSize][];
		map[0] = new int[] {0, 1, 1, 1, 0, 1, 1, 1};
		map[0] = new int[] {0, 0, 0, 1, 0, 0, 0, 0};
		map[0] = new int[] {1, 1, 0, 0, 0, 1, 0, 1};
		map[0] = new int[] {1, 1, 0, 1, 1, 1, 0, 1};
		map[0] = new int[] {1, 0, 0, 1, 0, 0, 0, 0};
		map[0] = new int[] {0, 1, 1, 1, 1, 1, 1, 1};
		map[0] = new int[] {1, 0, 1, 1, 0, 0, 0, 0};
		map[0] = new int[] {0, 1, 1, 0, 1, 1, 1, 0};
	}
}
