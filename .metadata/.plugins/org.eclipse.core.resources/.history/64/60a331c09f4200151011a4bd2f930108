package MazeRunner.Maze;

public class Strategy4 implements Strategy{

	@Override
	public Point getNextDir(Point curPos) {
		
		Point nextPos = new Point();
		switch (curPos.dir){
		case 0: 
			nextPos.x = curPos.x;
			nextPos.y = curPos.y + 1;
			curPos.dir++;
			
		case 1:
			nextPos.x = curPos.x + 1;
			nextPos.y = curPos.y;
			curPos.dir++;
			
		case 2:
			nextPos.x = curPos.x;
			nextPos.y = curPos.y - 1;
			curPos.dir++;
			
		case 3:
			nextPos.x = curPos.x - 1;
			nextPos.y = curPos.y;
			curPos.dir = -1;
		}
		
		return nextPos;
	}
}
